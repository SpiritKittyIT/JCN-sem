<UserControl x:Class="SnakeGame.Screens.MainMenu"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SnakeGame.Screens"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="100">
            <Button Content="New Game" Click="NewGame_Click" Margin="3" />
            <Button Content="High Scores" Click="HighScores_Click" Margin="3" />
            <Button Content="Exit" Click="Exit_Click" Margin="3" />
        </StackPanel>
    </Grid>
</UserControl>
